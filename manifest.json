{
    "manifest_version": 3,
    "name": "Triaging Companion v2",
    "version": "1.0",
    "description": "Helps you extract triaged bug data and copy in format of your tracker sheet to directly paste",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "host_permissions": [
    "https://jira.sc-corp.net/browse/*"
    ],
    
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}
